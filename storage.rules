rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // uploads 폴더: 로그인한 사용자만 업로드 가능, 모두 읽기 가능
    match /uploads/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // 기타 경로는 차단
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
