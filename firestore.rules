rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // users 컬렉션: 모두 읽기 가능 (role 확인용), 본인만 쓰기 가능
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // QNA 컬렉션: 모두 읽기 가능, 로그인한 사용자만 작성/수정/삭제 가능
    match /QNA/{document} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // QNA 댓글: 모두 읽기 가능, 로그인한 사용자만 작성 가능
    match /QNA/{qnaId}/comments/{commentId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // announcement 컬렉션: 모두 읽기 가능, 관리자만 작성/수정/삭제 가능
    match /announcement/{document} {
      allow read: if true;
      allow create, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }

    // activity 컬렉션: 모두 읽기 가능, 관리자만 작성/수정/삭제 가능
    match /activity/{document} {
      allow read: if true;
      allow create, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }

    // 연혁 컬렉션: 모두 읽기 가능, 관리자만 수정 가능
    match /history/{document} {
      allow read: if true;
      allow create, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }

    // 조직도 컬렉션: 모두 읽기 가능, 관리자만 수정 가능
    match /organization/{document} {
      allow read: if true;
      allow create, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }
  }
}
